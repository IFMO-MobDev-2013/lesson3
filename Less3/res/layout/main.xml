<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="0dp" android:layout_weight="1">
		<EditText
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:id="@+id/editText" android:layout_weight="3" android:hint="Enter word/text "/>
		<Button
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:text="Translate"
				android:id="@+id/button" android:layout_weight="2" android:onClick="onClickButtonTranslate"/>
	</LinearLayout>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView" android:gravity="center_vertical|center_horizontal" android:layout_weight="1"
			android:hint="Translation"/>
	<GridView
			android:id="@+id/gridview"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:columnWidth="200dp"
			android:numColumns="auto_fit"
			android:verticalSpacing="10dp"
			android:horizontalSpacing="5px"
			android:stretchMode="columnWidth"
			android:gravity="center"
			android:layout_marginTop="10dip"
			android:layout_weight="8"/>
</LinearLayout>